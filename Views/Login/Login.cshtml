@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <form action="CheckLogin" method="post" class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-group m-4">
            <label  class="control-label">UserName</label>
            <input name="UserNameInput"  class="form-control" placeholder="Username" required autofocus />
            <span  class="text-danger"></span>
        </div>
        <div class="form-group m-4">
            <label  class="control-label">Password</label>
            <input name="PasswordInput" class="form-control" placeholder="Password" required />
            <span  class="text-danger"></span>
        </div>
        <div class="text-center m-4">
        <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}